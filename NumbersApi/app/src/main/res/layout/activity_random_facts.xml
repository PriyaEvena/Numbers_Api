<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical"
    tools:context="com.example.sunny.numbersapi.RandomFacts">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Random Facts"
        android:textSize="15dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="9dp"
        />
    <Button
        android:id="@+id/Trivia_random"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#6A1B9A"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_background"
        android:text="Trivia" />

    <TextView
        android:id="@+id/triviaRandomContect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="#282833"
        android:visibility="gone"
        android:textSize="15dp"
        tools:text="heyyy tryimgnsdf" />

    <Button
        android:id="@+id/Math_random"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:textColor="#6A1B9A"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_background"
        android:text="Math" />

    <TextView
        android:id="@+id/mathRandomContect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="#282833"
        android:textSize="15dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/Date_random"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#6A1B9A"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_background"
        android:text="Date" />

    <TextView
        android:id="@+id/dateRandomContect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="#282833"
        android:textSize="15dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/Year_random"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:textColor="#6A1B9A"
        android:background="@drawable/button_background"
        android:text="Year" />

    <TextView
        android:id="@+id/yearRandomContect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="#282833"
        android:textSize="15dp"
        android:visibility="gone" />
</LinearLayout>
